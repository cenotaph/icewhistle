!!! Strict
%html
  %head
    %title
      - if @post.blank?
        icewhistle
      - else
        = @post.title 
        | Icewhistle
    %link{:href => "http://feeds2.feedburner.com/Icewhistle", :rel => "alternate", :title => "Icewhistle feed", :type => "application/rss+xml"}/
    %link{:href => "http://feeds2.feedburner.com/IcewhistleAll", :rel => "alternate", :title => "Icewhistle aggregate feed", :type => "application/rss+xml"}/
    - if controller.controller_name == 'crumbles'
      = render :partial => 'layouts/audioplayer'
    = stylesheet_link_tag :application
    %script{:src => "https://d3oqc02agtr30c.cloudfront.net/jwplayer.js", :type => "text/javascript"}



    = javascript_include_tag :application
    = csrf_meta_tag
    :javascript
      var switchTo5x=true;
    %script{:src => "http://w.sharethis.com/button/buttons.js", :type => "text/javascript"}
    :javascript
      stLight.options({publisher: "fec021ac-bd8c-4517-b7db-cd4a0d0ad212", doNotHash: false, doNotCopy: false, hashAddressBar: false});
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-8528342-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    .container
      #header.sixteen.columns
        - if user_signed_in?
          Logged in as: #{current_user.login} : #{link_to 'new post', new_post_path}  | #{link_to 'new crumble', new_crumble_path}
          = link_to "Sign out", destroy_user_session_path, :method => :delete 
        #header_image.four.columns.alpha
          .images.smaller_optional
            .optional= link_to image_tag('jape.png', :align => :left), '/'
            = link_to image_tag('johnfailicewhistle.jpg', :align => :left), '/'
          .blurb.column
            .column.column_heading what?
            .medium_text.column
              This site hosts my various projects, info, etc.
              = link_to '(whose?)', '/cv' 
        #header_rest.twelve.columns.omega
          .inner_text
            .icewhistle_title= link_to image_tag('/images/icons/logo.png'), '/'

            .header_left
              - @links.each do |link|
                = generate_popup(link)
          #links_filler{:style => "height: 30px; float: left; clear: left"}
            &nbsp;
            #links_menu{:style => "display: none;"}
              #link_title &nbsp;
              #link_description &nbsp;
      #wrapper.sixteen.columns
        #left_sidebar.three.columns.alpha

          .sidebar_content
            - unless controller.controller_name == 'posts' && controller.action_name == 'index'
              .sidebar_block
                .column_heading
                  recent posts
                  %span.system_link= link_to 'see all', posts_path
                %ul
                  = raw recent_posts
                
            .sidebar_block
              .column_heading
                recent bookmarks
                %span.system_link= link_to 'see all', 'http://icewhistle.postach.io/'    
              %ul
                - evernote.each do |bp|
                  %li.sidebar_entry= link_to bp.first, bp.last
                          
            .sidebar_block
              .column_heading
                recent archival
                %span.system_link= link_to 'see all', crumbles_path
              %ul
                = raw recent_crumbles
              
            .sidebar_block
              .column_heading
                recent blindness
                %span.system_link= link_to 'see all', 'http://blindness.icewhistle.com'
              %ul
                - blog_post('http://feeds.feedburner.com/Blindness', 'blindness').each do |bp|
                  %li.sidebar_entry= link_to raw(bp.first), bp.last
             

            


        #main_content.ten.columns.alpha
          - flash.each do |name, msg|
            = content_tag :div, raw(msg), :id => "flash_#{name}"
          = yield

        #right_sidebar.three.columns.omega
          .sidebar_content
            - unless @news.blank?
              .sidebar_block
                .column_heading latest news:
                - @news[0..2].each do |news|
                  .sidebar_item= link_to news.title + "...", news
              .sidebar_block
                .column_heading current status
                - twit = twitter_status
                .tweet= raw twit.first
                .meta
                  = link_to time_ago_in_words(Time.at(twit[1].to_i)) + " ago", "https://twitter.com/#!/hyksos/status/#{twit.last.to_s}"
                  - unless twit.last == 0
                    &sdot;
                    = link_to 'reply', 'http://twitter.com/intent/tweet?in_reply_to=' + twit.last.to_s
                    &sdot;
                    = link_to 'retweet', 'http://twitter.com/intent/retweet?tweet_id=' + twit.last.to_s
                    &sdot;
                    = link_to 'favorite', 'http://twitter.com/intent/favorite?tweet_id=' + twit.last.to_s
                = link_to 'Follow @hyksos', 'http://twitter.com/hyksos', :class => "twitter-follow-button"
                %script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"} 
              .sidebar_block
                .column_heading search
                = form_tag(search_index_path, :method => :get) do
                  = text_field_tag("search", params[:search], :size => 15)

                = submit_tag "Search"

            .sidebar_block
              .column_heading feeds
              .side_title= link_to image_tag('/images/icons/rss.jpg')+' orig posts ', 'http://feeds.feedburner.com/Icewhistle/'
              .side_title= link_to image_tag('/images/icons/rss.jpg') + ' aggregate feed ', 'http://feeds.feedburner.com/IcewhistleAll/'
            .sidebar_block
              .sidebar_content
                .column_heading contact
              %ul
                %li.side_title= link_to '@hyksos', 'http://twitter.com/hyksos'
                %li.side_title= link_to 'email', 'mailto: john (@) ptarmigan (piste) (two-letter-country-code, either one that has a ptarmigan)'
