.post.container
  
  .level
    .level-left
      .level-item
        %h1.title All posts
      .level-item
        = form_tag(search_index_path, :method => :get) do
          = text_field_tag("search", params[:search].blank? ? 'Search...' : params[:search], :size => 10)
  .level
    .level-left
      .level-item= paginate @posts

  
  - @posts.in_groups_of(3).each do |group|
    .columns
      - group.each do |post|
        - next if post.nil?
        .column.is-one-third= render :partial => 'posts/post_excerpt', :locals => {:post => post}
      
  .columns
    = paginate @posts
  .is-clearfix
  
  = content_for :jquery do
    :plain
      $("input#search").clearField();