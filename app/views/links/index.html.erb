


<table>
  <tr>
    <th>Name</th>
    <th>Descrption</th>
    <th>Imagefilename</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%=h link.name %></td>
      <td><%=h link.description %></td>
      <td><%=h link.imagefilename %></td>
      <td><%= link_to "Show", link %></td>
      <td><%= link_to "Edit", edit_link_path(link) %></td>
      <td><%= button_to "Destroy", link, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Link", new_link_path %></p>
