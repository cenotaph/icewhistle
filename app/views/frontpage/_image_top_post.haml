.row
  .small-12.columns.text-center
    %h3.subheading= link_to raw(post.title), post
    
- if post.image? && post.photos.empty?
  .row
    .small-12.columns
      .cropped= image_tag post.image.url(:main)
- elsif !post.photos.empty?
  .row
    .small-12.columns.text-center
      - if post.photos.size == 1
        .cropped= image_tag post.photos.first.filename.url(:main)
      - elsif post.photos.size > 1
        %ul{:"data-orbit" => ""}
          - post.photos.each do |p|
            %li
              = image_tag p.filename.url(:main) 

    %medium= l post.updated_at, :format => :long    
.row          
  .small-12.columns.text-center
    %p= raw Nokogiri::HTML.parse(post.body).css('p').first.text
    = link_to 'Read more', post, :class => [:button, :tiny]