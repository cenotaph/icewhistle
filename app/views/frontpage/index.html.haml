%div{:"data-sticky-container" => ''}
  .sticky#example{:'data-sticky'=> '', :'data-margin-top' => '0', style: 'width: 100%', :"data-margin-bottom" => 0}
    %nav#magellan{:"data-magellan" =>  '', :'data-bar-offset' => 112}
      %ul.horizontal.menu.expanded
        %li.first= link_to @posts.first.title, "#top#{@posts.first.id.to_s}"
        
        %li= link_to 'Recent posts', "#recent_posts"
        %li= link_to 'Blindness', '#blindness_container'
        %li= link_to 'Less recent posts', '#less_recent'
        %li= link_to 'Recently read', '#bookmarks_front'



%section{id: "top#{@posts.first.id.to_s}", :"data-magellan-target" => "top#{@posts.first.id.to_s}"}       
.full_width_post.text-center{:id => "top#{@posts.first.id.to_s}"}= render :partial => 'full_width_post', :locals => {:post => @posts.first }
    
%div#acedia= render :partial => 'acedia'




%section#recent_posts.row{:"data-equalizer" => "outer", :"data-magellan-target" => "recent_posts"}
  .columns.text-center
    - @posts[1..2].each do |post|
      .small-12.medium-12.large-6.columns.post_outer{:"data-equalizer-watch" => "outer"}= render :partial => 'image_top_post', :locals => {:post => post}
%div#tweet_front= render :partial => 'tweet'

- Cash.visible.where(:source => "blindness").where("image_width > 760").order(order: :desc).limit(1).each do |bp|
  %section#blindness_container.blindness_wrapper{:"data-magellan-target" => "blindness_container"}= render :partial => 'blindness_image', :locals => {:post => bp}


%section#less_recent.row{:"data-magellan-target" => "less_recent"}
  - @posts[3..5].each do |post|
    .large-4.columns{:"data-equalizer-watch" => "outer2"}= render :partial => 'title_top_post', :locals => {:post => post}
  .columns.text-center
    %h6= link_to 'Older posts', posts_path(:page => 2), class: [:button, :tiny]


#bookmarks_front{:style => 'background-color: #F2F27C', :"data-magellan-target" => "bookmarks_front"}= render :partial => 'bookmark', :locals => {:link => Cash.where(:source => 'bookmarks').order('created_at DESC').limit(25) }
