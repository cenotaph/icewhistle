<h1>New publication</h1>



<%= form_for([:admin,@publication]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Format</b><br />
    <%= f.text_field :format %>
  </p>

  <p>
    <b>Publisher</b><br />
    <%= f.text_field :publisher %>
  </p>

  <p>
    <b>Date</b><br />
    <%= f.text_field :date %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Major</b><br />
    <%= f.check_box :major %>
  </p>
  <p>
    <b>URL to icon (optional):</b><br>
    <%= f.text_field :icon %>
  </p>
  
  <p>
    <b>Real date (for ordering):</b><br />
    <%= f.text_field :realdate %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_publications_path %>
