<div class="row">
<div class="small-12 columns">
<h1>New job</h1>
</div></div>

<%= form_for([:admin,@job]) do |f| %>
<div class="row">
<div class="small-12 columns"

  <p>
    <b>Started</b><br />
    <%= f.text_field :started %>
  </p>

  <p>
    <b>Finished</b><br />
    <%= f.text_field :finished %>
  </p>

  <p>
    <b>Employer</b><br />
    <%= f.text_field :employer %>
  </p>

  <p>
    <b>Department</b><br />
    <%= f.text_field :department %>
  </p>

  <p>
    <b>Address1</b><br />
    <%= f.text_field :address1 %>
  </p>

  <p>
    <b>Address2</b><br />
    <%= f.text_field :address2 %>
  </p>

  <p>
    <b>City</b><br />
    <%= f.text_field :city %>
  </p>

  <p>
    <b>State</b><br />
    <%= f.text_field :state %>
  </p>

  <p>
    <b>Postcode</b><br />
    <%= f.text_field :postcode %>
  </p>

  <p>
    <b>Country</b><br />
    <%= f.text_field :country %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Major</b><br />
    <%= f.check_box :major %>
  </p>
  <p>
    <b>Real date (for ordering):</b><br />
    <%= f.text_field :realdate %>
  </p>
  <p>
    <%= f.submit "Create", :class => [:button, :radius]  %>
  </p>
<% end %>

<%= link_to 'Back', admin_jobs_path, :class => [:button, :radius] %>
