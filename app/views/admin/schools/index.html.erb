<h1>Listing schools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>dates</th>
    <th>Category</th>
  </tr>

<% for school in @schools %>
  <tr>
    <td><%=  school.name %>, <%=  school.degree %></td>
    <td><%=h school.started %> - <%=h school.finished %> </td>
 
    <td><%= link_to 'Show', admin_school_path(school) %></td>
    <td><%= link_to 'Edit', edit_admin_school_path(school) %></td>
    <td><%= link_to 'Destroy', admin_school_path(school), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

