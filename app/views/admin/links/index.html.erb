<h1>Listing links</h1>

<table id="sortable">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
  </tr>

<% for link in @links %>
  <tr class="sortable">
    <td><%= link_to link.name, link.url%></td>
    <td><%=h link.description %></td>
    <td><% unless link.category.nil? %><%= link.category.name %><% end %></td>

    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_admin_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

