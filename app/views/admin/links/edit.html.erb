<h1>Editing links</h1>


<% form_for([:admin,@link]) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>
 <p><b>Filename</b> <%= f.text_field :imagefilename %>.png</p>
  <p>
    <b>Url</b><br />
    <%= f.text_field :url %>
  </p>
 <p><b> Sort order</b><br />
   <%= f.text_field :sortorder %>
  </p>
 <p> 
	<b>Category</b><br />
	<%= collection_select(:link, :category_id, @categories, :id, :name, {})%>
 </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @link %> |
<%= link_to 'Back', links_path %>
